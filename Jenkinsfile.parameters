      sh 'echo OFFLINE_INBOX_ENABLED='     + OFFLINE_INBOX_ENABLED     + '>>' + '.env'
      sh 'echo MANY_WHISPER_TOPICS_ENABLED=' + MANY_WHISPER_TOPICS_ENABLED     + '>>' + '.env'

      sh 'echo "**********************************************************************"'
      sh 'echo PARAMETERIZED BUILD - USING CUSTOM ENVIRONMENT'
      sh 'cat .env'
