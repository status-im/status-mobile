(ns status-im.contexts.wallet.wallet-connect.modals.common.fees-data-item.view)

(defn fees-subtitle
  [text error?]
  (let [theme (quo.theme/use-theme)]
    [quo/text
     {:weight :regular
      :size   :paragraph-2
      :style  (if error?
                (colors/resolve-color :danger theme)
                (colors/theme-colors colors/neutral-100
                                     colors/white
                                     theme))}
     text]))
