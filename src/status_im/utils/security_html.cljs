(def basic-regex #"(?i)\s?<!doctype html>|(<html\b[^>]*>|<body\b[^>]*>|<x-[^>]+>)+")
(def tags-regex (->> html-tags
                     (map #(str "<" % "\\b[^>]*>"))
                     (string/join "|")))
(def full-regex (new js/RegExp tags-regex, "i"))

(defn is-html? [text]
  (or (re-find basic-regex text)
      (re-find full-regex text)))
